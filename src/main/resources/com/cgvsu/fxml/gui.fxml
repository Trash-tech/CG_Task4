<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>

<?import javafx.scene.control.ListView?>
<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.cgvsu.GuiController">
    <!-- ВЕРХНЯЯ ЧАСТЬ: Меню и Панель инструментов -->
    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu mnemonicParsing="false" text="Файл">
                    <MenuItem mnemonicParsing="false" onAction="#onOpenModelMenuItemClick" text="Загрузить модель">
                        <accelerator>
                            <KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="F"/>
                        </accelerator>
                    </MenuItem>
                    <!-- Добавили пункт в меню -->
                    <MenuItem mnemonicParsing="false" onAction="#onSaveModelMenuItemClick" text="Сохранить модель">
                        <accelerator>
                            <KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="S"/>
                        </accelerator>
                    </MenuItem>
                </Menu>
                <Menu mnemonicParsing="false" text="Справка">
                    <MenuItem mnemonicParsing="false" onAction="#handleCameraForward" text="Forward">
                        <accelerator><KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="UP"/></accelerator>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#handleCameraBackward" text="Backward">
                        <accelerator><KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="DOWN"/></accelerator>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#handleCameraLeft" text="Left">
                        <accelerator><KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="LEFT"/></accelerator>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#handleCameraRight" text="Right">
                        <accelerator><KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="RIGHT"/></accelerator>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#handleCameraUp" text="Up">
                        <accelerator><KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="W"/></accelerator>
                    </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#handleCameraDown" text="Down">
                        <accelerator><KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="S"/></accelerator>
                    </MenuItem>
                </Menu>
            </MenuBar>

            <ToolBar>
                <!-- <Button mnemonicParsing="false" onAction="#onOpenModelMenuItemClick" text="Загрузить модель" /> -->
                <!-- <Button mnemonicParsing="false" onAction="#onSaveModelMenuItemClick" text="Сохранить модель" /> -->
                <!-- <Region prefWidth="5.0" /> -->
                <Button mnemonicParsing="false" onAction="#handleCameraForward" text="Вперед" />
                <Button mnemonicParsing="false" onAction="#handleCameraBackward" text="Назад" />
                <Button mnemonicParsing="false" onAction="#handleCameraRight" text="Вправо" />
                <Button mnemonicParsing="false" onAction="#handleCameraLeft" text="Влево" />
                <Button mnemonicParsing="false" onAction="#handleCameraRight" text="Вверх" />
                <Button mnemonicParsing="false" onAction="#handleCameraLeft" text="Вниз" />

                <Region HBox.hgrow="ALWAYS" />

                <!-- Кнопка рендера -->
                <Button styleClass="accent-button" mnemonicParsing="false"
                        onAction="#onRenderButtonClick" text="Рендер" />

                <Region prefWidth="10.0" /> <!-- Небольшой отступ -->

                <!-- Кнопка для скрытия/показа боковой панели -->
                <ToggleButton fx:id="sidebarToggle" styleClass="accent-button" selected="true"
                              onAction="#toggleSidebar" text="Скрыть панель" />

                <Region prefWidth="10.0" />

                <ToggleButton fx:id="themeSwitch" styleClass="accent-button"
                              mnemonicParsing="false" onAction="#switchTheme" text="Тёмная тема" />
            </ToolBar>
        </VBox>
    </top>

    <!-- ЦЕНТРАЛЬНАЯ ЧАСТЬ: SplitPane (слева Canvas, справа настройки) -->
    <center>
        <SplitPane fx:id="mainSplitPane" dividerPositions="0.75">

            <!-- Левая часть: Холст -->
            <AnchorPane fx:id="canvasPane" minWidth="400">
                <Canvas fx:id="canvas" width="1200" height="800" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" />
            </AnchorPane>

            <!-- Правая часть: Боковая панель -->
            <AnchorPane fx:id="sidebar" minWidth="250" maxWidth="450">
                <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <content>
                        <VBox spacing="10.0" style="-fx-padding: 10;">
                            <!-- <Label text="Inspector" style="-fx-font-weight: bold; -fx-font-size: 14px;"/> -->

                            <!-- Секция: Модели -->
                            <TitledPane text="Модели" expanded="true">
                                <VBox spacing="5">
                                    <ListView fx:id="modelsListView" prefHeight="100.0" />
                                    <Button text="Удалить модель" maxWidth="Infinity" onAction="#onRemoveModelClick"/>
                                    <Button text="Загрузить текстуру" maxWidth="Infinity"/>
                                </VBox>
                            </TitledPane>

                            <!-- Секция: Трансформации -->
                            <TitledPane text="Трансформация" expanded="true">
                                <VBox spacing="10">
                                    <!-- Scale -->
                                    <Label text="Масштаб"/>
                                    <GridPane hgap="5" vgap="5">
                                        <Label text="X:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <TextField fx:id="scaleX" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        <Label text="Y:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <TextField fx:id="scaleY" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Label text="Z:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <TextField fx:id="scaleZ" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </GridPane>

                                    <Separator />

                                    <!-- Rotation -->
                                    <Label text="Поворот"/>
                                    <GridPane hgap="5" vgap="5">
                                        <Label text="X:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <TextField fx:id="rotateX" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        <Label text="Y:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <TextField fx:id="rotateY" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Label text="Z:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <TextField fx:id="rotateZ" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </GridPane>

                                    <Separator />

                                    <!-- Translation (Position) -->
                                    <Label text="Позиция"/>
                                    <GridPane hgap="5" vgap="5">
                                        <Label text="X:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <TextField fx:id="translateX" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        <Label text="Y:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <TextField fx:id="translateY" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Label text="Z:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <TextField fx:id="translateZ" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </GridPane>
                                </VBox>
                            </TitledPane>

                            <!-- Секция: Камера -->
                            <TitledPane text="Камера" expanded="false">
                                <VBox spacing="5">
                                    <Button text="Сбросить камеру" maxWidth="Infinity"/>
                                </VBox>
                            </TitledPane>
                        </VBox>
                    </content>
                </ScrollPane>
            </AnchorPane>
        </SplitPane>
    </center>
</BorderPane>